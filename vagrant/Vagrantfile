# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  
  ## Sources (not required for vagrantup.com)
  #config.vm.box_url = "http://files.vagrantup.com/customBox.box"
  #config.vm.box_url = "file:///C:/path/to/vagrant/customBox.box"
  #config.vm.box_url = "file:///opt/vagrant/boxes/customBox.box"
  
  ## Box (required)
  config.vm.box = "vavyskov/symfony" ## "Template"
  
  ## Enable when do not use "Template"
#  config.vm.box = "debian/contrib-stretch64"
#  config.vm.provision :shell, path: "config/symfony.sh"
#  config.vm.provision :shell, path: "config/symfony-dev.sh"

  
  
  ## Hostname
  config.vm.hostname = "vagrant.example.com"

  ## Network
  config.vm.network "private_network", ip: "192.168.33.10"
  config.vm.network "forwarded_port", guest: 80, host: 80, host_ip: "127.0.0.1"

  ## Share www folder to the guest VM
  config.vm.synced_folder "../www/default", "/home/vagrant/www/", type:"nfs", mount_options:['rw','vers=3','tcp'], linux__nfs_options:['rw', 'no_subtree_check', 'all_squash', 'async']
  #config.vm.synced_folder "../www/my-next-project/", "/home/my-next-project/www/", type:"nfs", mount_options:['rw','vers=3','tcp'], linux__nfs_options:['rw', 'no_subtree_check', 'all_squash', 'async']

  ## Share PostgreSQL data to the guest VM
  ##
  ## http://climber2002.github.io/blog/2015/02/07/install-and-configure-postgresql-on-ubuntu-14-dot-04/
  ##
  #config.vm.synced_folder "../postgres", "/var/lib/postgresql/data/", type:"nfs", mount_options:['rw','vers=3','tcp'], linux__nfs_options:['rw', 'no_subtree_check', 'all_squash', 'async']
  
  #config.vm.synced_folder "../postgres", "/var/lib/postgresql/9.6/main/", type:"nfs", mount_options:['rw','vers=3','tcp'], linux__nfs_options:['rw', 'no_subtree_check', 'all_squash', 'async']
  
  #config.vm.synced_folder "../postgres", "/var/lib/postgresql/9.6/data/", type:"nfs", mount_options:['rw','vers=3','tcp'], linux__nfs_options:['rw', 'no_subtree_check', 'all_squash', 'async']
  
  ## VirtualBox
  config.vm.provider "virtualbox" do |vb|
    vb.name = "symfony"
    vb.cpus = 1
    vb.memory = 2048
    ## HDD cache off !!!
    vb.customize [
      "storagectl", :id, 
      "--name", "SATA Controller", 
      "--hostiocache", "off"
    ]
    ## Fix slow DNS lookups
    vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
  end

end
